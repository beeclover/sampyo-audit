{
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "scripts": {
    "build": "mix",
    "build:production": "mix --production",
    "start": "mix watch",
    "hot": "mix watch --hot",
    "clear": "wp acorn optimize:clear",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\"",
    "translate": "npm run translate:pot && npm run translate:js",
    "translate:pot": "wp i18n make-pot . ./resources/lang/sage.pot --ignore-domain --include=\"app,resources\"",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@tinypixelco/laravel-mix-wp-blocks": "^1.1.0",
    "@tiptap/starter-kit": "^2.0.0-beta.153",
    "@tiptap/vue-3": "^2.0.0-beta.82",
    "@vue/compiler-sfc": "^3.2.24",
    "@wordpress/babel-preset-default": "^6.4.1",
    "@wordpress/blocks": "^11.11.0",
    "@wordpress/browserslist-config": "^2.6.0",
    "@wordpress/dependency-extraction-webpack-plugin": "^3.2.1",
    "@wordpress/dom-ready": "^3.12.0",
    "@wordpress/edit-post": "^6.9.0",
    "babel-eslint": "^10.0.3",
    "browser-sync": "^2.26",
    "browser-sync-webpack-plugin": "2.2",
    "cross-env": "^5.2.1",
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18",
    "laravel-mix": "^6.0.49",
    "laravel-mix-purgecss": "^6.0.0",
    "npm-run-all": "^4.1",
    "postcss": "^8.4.5",
    "rimraf": "^3.0",
    "sass": "^1.22",
    "sass-loader": "^12.1.0",
    "stylelint": "^10.1",
    "stylelint-config-standard": "^18.2",
    "vue": "^3.2.24",
    "vue-loader": "^16.8.3",
    "vue-spinner": "^1.0.4",
    "vue3-click-away": "^1.2.1",
    "webpack": "^5.65.0"
  },
  "dependencies": {
    "alpinejs": "^3.7.0",
    "body-scroll-lock": "^4.0.0-beta.0",
    "headroom.js": "^0.12.0",
    "jquery": "^3.5",
    "tailwindcss": "^3.0.7"
  }
}
